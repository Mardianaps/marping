<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inbox">

    <LinearLayout
        android:id="@+id/layoutatas"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Inbox" />


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="39dp"
        android:layout_weight="1"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/lonceng" />


    <LinearLayout
        android:id="@+id/layouttengah"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layoutbawah"
        android:layout_below="@+id/layoutatas"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-6dp"
        android:layout_marginBottom="6dp"
        android:orientation="vertical">


        <!--<ImageView-->
            <!--android:id="@+id/imageView2"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--app:srcCompat="@drawable/ssinbox" />-->

        <Button
            android:id="@+id/buttonChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/chat"
            android:text="Chat"
            android:textStyle="bold"
            android:background="#FFFFFFFF" />

        <Button
            android:id="@+id/buttonBantuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFFFF"
            android:textStyle="bold"
            android:drawableLeft="@drawable/bantuan"
            android:text="Pesan Bantuan" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutbawah"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="33dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/home" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="24dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/feed" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/inbox" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="28dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/keranjang" />

        <ImageView
            android:id="@+id/imageViewLogout"
            android:layout_width="51dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/logout" />
    </LinearLayout>

</RelativeLayout>